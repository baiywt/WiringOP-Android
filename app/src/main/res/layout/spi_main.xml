<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spidev"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/spi_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPI Channel："/>
        <EditText
            android:id="@+id/spi_channel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false" />
        <TextView
            android:id="@+id/spi_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPI Port："/>
        <EditText
            android:id="@+id/spi_port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false" />
        <TextView
            android:id="@+id/spi_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPI Speed："/>
        <EditText
            android:id="@+id/spi_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000000" />

    </LinearLayout>
    <Button
        android:id="@+id/setup_spi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/data0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data[0]："/>
        <EditText
            android:id="@+id/spi_data0_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x9f" />
        <TextView
            android:id="@+id/data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data[1]："/>
        <EditText
            android:id="@+id/spi_data1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x09" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data[2]："/>
        <EditText
            android:id="@+id/spi_data2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x09" />
        <TextView
            android:id="@+id/data3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data[3]："/>
        <EditText
            android:id="@+id/spi_data3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x09" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/start_spi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="transfer" />

        <TextView
            android:id="@+id/read_i2c_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/testinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:keepScreenOn="true"
                android:textSize="20sp" >
            </TextView>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
