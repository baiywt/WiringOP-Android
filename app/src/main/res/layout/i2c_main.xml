<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/i2c_port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/dev/i2c-2" />
        <EditText
            android:id="@+id/i2c_addr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x10" />
        <Button
            android:id="@+id/setup_i2c_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初始化" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/i2c_reg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外设寄存器地址："/>
        <EditText
            android:id="@+id/i2c_reg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x10" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/read_i2c_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取" />

        <TextView
            android:id="@+id/read_i2c_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/write_i2c_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入" />
        <EditText
            android:id="@+id/i2c_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x10" />
        <TextView
            android:id="@+id/write_i2c_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >



        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/testinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:keepScreenOn="true"
                android:textSize="20sp" >
            </TextView>
        </ScrollView>
    </LinearLayout>

</LinearLayout>