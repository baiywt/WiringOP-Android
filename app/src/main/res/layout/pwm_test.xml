<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >
        <Spinner
            android:id="@+id/sp_pwm"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pwm_controler"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="false">
        </EditText>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Period"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/et_pwm_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="50000"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ns">
        </TextView>
    </LinearLayout>
    <ToggleButton
        android:id="@+id/btn_pwm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true" />

    <LinearLayout
        android:id="@+id/lo_pwm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <CheckBox
            android:id="@+id/cb_pwm_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Enable" />

        <TextView
            android:id="@+id/tv_duty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <SeekBar
            android:id="@+id/sb_pwm_duty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:max="50000" />
    </LinearLayout>

</LinearLayout>
